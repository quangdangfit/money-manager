<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp"
    android:background="@color/darkColor"
    tools:context="com.example.minh.moneymanager.ThemgiaodichActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/account"/>
                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ví"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/blackColor"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spintk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteColor"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/loaigiaodich"/>
                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Loại giao dịch"
                    android:textColor="@color/blackColor"

                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:layout_marginLeft="10sp"
                android:id="@+id/spinloaigd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteColor">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/money"/>
                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Số tiền (VNĐ)"
                    android:textColor="@color/blackColor"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/edsotien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập số tiền"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteColor"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/note"/>
                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@color/whiteColor"
                    android:text="Ghi chú"
                    android:textColor="@color/blackColor"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:layout_marginLeft="15sp"
                android:id="@+id/edghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập ghi chú" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteColor"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/phannhom"/>
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:text="Phân Nhóm"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:layout_marginLeft="5sp"
                android:id="@+id/spinphannhom"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteColor"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/trangthai"/>
                <TextView
                    android:id="@+id/trangthaigd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:text="Trạng thái giao dịch"
                    android:textColor="@color/blackColor"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:layout_marginLeft="5sp"
                android:id="@+id/spintrangthai"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/date"/>
                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Ngày Giao dịch"
                    android:textColor="#000"
                    android:background="#ffffff"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp" >

                <EditText
                    android:layout_marginLeft="15sp"
                    android:id="@+id/etngaygiaodich"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Ngày giao dịch"
                    android:inputType="date"
                    android:textColor="@color/blackColor"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                </EditText>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_picker"
                    android:id="@+id/imageViewxx"
                    android:padding="2dp"
                    android:layout_alignBottom="@+id/etngaygiaodich"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center" >

                <Button
                    android:id="@+id/savegd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="  Thêm   "
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/button_color"
                    android:padding="10dp"/>


            </TableRow>
        </LinearLayout>
    </ScrollView>

</GridLayout>
